{
    "require-dev": {
        "squizlabs/php_codesniffer": "*"
    },
    "scripts": {
        "code-sniffer": [
            "./vendor/bin/phpcs --config-set default_standard ruleset.xml",
            "./vendor/bin/phpcs --config-set colors 1"
        ],
        "post-install-cmd": [
            "@code-sniffer"
        ],
        "post-update-cmd": [
            "@code-sniffer"
        ]
    }
}
